<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.notboredapp">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotBoredApp"
        tools:targetApi="31">
        <activity
            android:name=".view.TermsAndConditions"
            android:exported="false"
            android:label="@string/terms_and_conditions"
            android:theme="@style/Theme.NotBoredApp.NoActionBar" />
        <activity
            android:name=".view.Activities"
            android:exported="false"
            android:label="Activities"
            android:theme="@style/Theme.NotBoredApp.NoActionBar" />
        <activity
            android:name=".view.Suggestion"
            android:exported="false"
            android:label="Suggestions"
            android:theme="@style/Theme.NotBoredApp.NoActionBar" />
        <activity
            android:name=".view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>